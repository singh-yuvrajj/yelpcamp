<% layout('layouts/boilerPlate') -%>
    <form action="/campground/<%=currground.id%>?_method=PUT" method="post" class="needs-validation" enctype="multipart/form-data"  novalidate>
        <div class="mb-3 offset-1">
                <label for="exampleInputEmail1" class="form-label">Title</label>
                <input type="text" name="title" class="form-control" id="exampleInputEmail1" value="<%= currground.title%>" required>
                <div class="valid-feedback">
                  Looks good!
                </div>

              </div>
              <div class="mb-3 offset-1">
                <label for="exampleInputPassword1" class="form-label">Price</label>
                <div class="input-group">
                  <span class="input-group-text">Rs.</span>
                  <input type="number" class="form-control" id="exampleInputPassword1" name="price" placeholder="0.00" value="<%=currground.price%>" required>
                </div>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="mb-3 offset-1">
                <div class="input-group mb-3">
                  <input type="file" class="form-control" id="inputGroupFile02" name = "images" multiple>
                  <label class="input-group-text" for="inputGroupFile02">Upload</label>
                </div>
                <div>
                  <% currground.images.forEach((element,i) => { %>
                    <div class="form">
                      <img src="<%= element.thumbnail %>" alt="">
                      <input type="checkbox" name="deleteImages[]" value="<%= element.filename%>" id="image-<%= i %>">
                    </div>
                  <% })%>
                </div>
               
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
              <div class="mb-3 offset-1">
                  <label for="exampleInput3" class="form-label">Location</label>
                  <input type="text" class="form-control" id="exampleInput3" name="location" value="<%=currground.location%>" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3 offset-1">
                  <label for="exampleInput4" class="form-label">Description</label>
                  <textarea class="form-control" id="exampleInput4" name="description" rows="3" required><%= currground.description%></textarea>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
              <div class="mb-3 offset-1">
                  <button type="submit" class="btn btn-info">Update</button>
                  <button class="btn btn-secondary"><a href="/campground" class="link-light link-underline link-underline-opacity-0">All CAMPGROUND</a></button>
                  
              </div>
    </form>
